<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs442.rshah92.bookapp.UserHome">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_login_icon80"
        android:layout_marginTop="63dp"
        android:id="@+id/imageButtonProfile"
        android:layout_below="@+id/imageButtonSearch"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dues_50"
        android:layout_marginTop="66dp"
        android:id="@+id/imageButtonDue"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/booksearch80"
        android:id="@+id/imageButtonSearch"
        android:layout_alignTop="@+id/imageButtonDue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:text="View Dues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageButtonDue"
        android:layout_alignLeft="@+id/view_deus"
        android:layout_alignStart="@+id/view_deus"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Search"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toLeftOf="@+id/imageButtonProfile"
        android:layout_toStartOf="@+id/imageButtonProfile" />

    <TextView
        android:text="Profile details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_below="@+id/imageButtonProfile"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="4234 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_deus"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageButtonDue"
        android:layout_toRightOf="@+id/imageButtonProfile"
        android:layout_toEndOf="@+id/imageButtonProfile"
        android:layout_marginBottom="19dp"
        android:textColor="#000000" />

</RelativeLayout>
