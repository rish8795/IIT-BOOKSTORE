<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_search_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs442.rshah92.bookapp.BookSearchMain">

    <RelativeLayout
        android:layout_width ="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <requestFocus />


        <TextView
            android:text="Search by:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:id="@+id/textView8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Bnamesearch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="150dp"
            android:alpha="1.7"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Book Name"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:width="150dp" />

        <Button
            android:id="@+id/Anamesearch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:alpha="1.70"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Author Name"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/isbsearch"
            android:layout_centerHorizontal="true"
            android:width="150dp" />

        <Button
            android:id="@+id/isbsearch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:alpha="1.70"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="ISBN"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/Bnamesearch"
            android:layout_centerHorizontal="true"
            android:width="150dp" />

        <Button
            android:id="@+id/atzsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.70"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="View All Books"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginLeft="150dp"
            android:layout_below="@+id/Anamesearch"
            android:layout_centerHorizontal="true"
            android:width="150dp" />


    </RelativeLayout>

</RelativeLayout>
