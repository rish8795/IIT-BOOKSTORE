<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs442.rshah92.bookapp.AdminHome">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_books80"
        android:id="@+id/imageButton1"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="View Books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButtonSearch"
        android:layout_alignStart="@+id/imageButtonSearch"
        android:textStyle="normal|bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_login_icon80"
        android:id="@+id/imageButton3"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/imageButtonDue"
        android:layout_alignLeft="@+id/imageButton1"
        android:layout_alignStart="@+id/imageButton1" />

    <TextView
        android:text="Admin Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignRight="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:textStyle="normal|bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/booksearch80"
        android:id="@+id/imageButtonSearch"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_above="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/issue_books80"
        android:id="@+id/imageButtonDue"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_alignLeft="@+id/imageButtonSearch"
        android:layout_alignStart="@+id/imageButtonSearch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Book "
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Waitlist"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButtonDue"
        android:layout_alignEnd="@+id/textView14"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Admin Options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

</RelativeLayout>
