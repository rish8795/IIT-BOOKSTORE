<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adminissuebook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/library"
    tools:context="com.cs442.rshah92.bookapp.Adminissuebook">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:alpha="0.60"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            android:hint="BookName"
            android:inputType="textCapWords"
            android:textColorHint="#848484"
            android:textSize="30dp" >
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/authorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:alpha="0.60"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            android:hint="Author Name"
            android:inputType="textPersonName"
            android:textColorHint="#848484"
            android:textSize="30dp" >
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:alpha="0.60"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            android:hint="ISBN"
            android:inputType="text"
            android:textColorHint="#848484"
            android:textSize="30dp" >
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:alpha="0.60"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            android:hint="Quantity"
            android:inputType="number"
            android:textColorHint="#848484"
            android:textSize="30dp" >
        </EditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/shelf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:alpha="0.60"
            android:background="@android:color/holo_red_light"
            android:ems="10"
            android:hint="Shelf"
            android:inputType="textPersonName"
            android:textColorHint="#848484"
            android:textSize="30dp" >
        </EditText>
    </android.support.design.widget.TextInputLayout>



    <ImageView
        android:id="@+id/imageupload"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etuploadname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:alpha="0.60"
        android:background="@android:color/holo_red_light"
        android:ems="10"
        android:hint="Description"
        android:inputType="textAutoCorrect"
        android:textColorHint="#848484"
        android:textSize="20dp"
        />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnupload"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/colorMainMenuButton"
        android:textColor="#FFFFFF"
        android:alpha="0.70"
        android:text="UPLOAD IMAGE"/>


    <ImageView
        android:id="@+id/imagedownload"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/bokadd"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:background="@color/colorMainMenuButton"
        android:textColor="#FFFFFF"
        android:alpha="0.70"
        android:text="ADD BOOK" />

</LinearLayout>
</ScrollView>